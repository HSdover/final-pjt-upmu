<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="employee">
	<insert id="insertEmp">
		insert into
			employee
		values(
			seq_emp_no.nextval,
			#{empName},
			#{empPw},
			#{empPhone},
			#{empEmail},
			#{empAddr},
			#{empBirth},
			'정상',
			default,
			default,
			default
		)
		<!-- enroll_date, enabled컬럼은 기본값처리 -->
	</insert>
	
	<select id="selectOneEmp" resultType="employee">
		select
			*
		from 
			employee
		where 
			emp_email = #{id}
	</select>

</mapper>